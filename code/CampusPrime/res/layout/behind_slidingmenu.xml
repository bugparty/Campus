<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 	<Button android:id="@+id/weibo_auth_btn"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:text="weibo_auth"/>
 	
 	<Button android:id="@+id/login"
 	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="login"/> 	
	<Button android:id="@+id/register"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="register"/>
	<Button android:id="@+id/user_profile"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="user_profile"/>
	<Button android:id="@+id/group_profile"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="group_profile"/>
 	<TextView android:id="@+id/auth_info"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"/>
 	
</LinearLayout>
